          <local>
            <private>uploads/documents/</private>
            <public>public/website/uploads/documents/</public>
          </local>
          <s3>
            <private>private/documents/</private>
            <public>public/documents/</public>
          </s3>
        </path>
        <!-- excluded extensions -->        
        <excluded_extensions>
          <extension>exe</extension>
        </excluded_extensions>
