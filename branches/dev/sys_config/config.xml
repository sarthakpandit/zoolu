      <external>
        <id>4</id>
        <default_formId>DEFAULT_EXTERNAL</default_formId>
      </external>
      <process>
        <id>5</id>
        <default_formId>DEFAULT_PROCESS</default_formId>
      </process>
    </page_types>
    
    <!-- REGION TYPES -->
    <!-- table: regionTypes -->
